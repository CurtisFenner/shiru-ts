{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "built",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "allowJs": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": [
      "node"
    ],
    "rootDir": "src/"
  },
  "include": [
    "src/*.d.ts",
    "src/shiru/**/*.ts",
    "src/util/**/*.ts"
  ]
}
